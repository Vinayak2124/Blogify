<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('./partials/head') %>
    <title>Blog</title>
    <style>
      .cont1 {
        max-width: 100%;
        width: 1000px;
        margin: auto;
        height: fit-content;
        box-shadow: 0 0 2px 2px rgb(18, 11, 1);
        border-radius: 60px;
        padding-left: 40px;
      }
      .container1 img {
        max-width: 100%;
        max-height: 500px;
        box-shadow: 5px 5px 5px 5px gray;
      }
      .container1 h1 {
        text-shadow: -2px -2px 2px blueviolet;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="cont1 mt-4">
      <div class="container1 mt-4">
        <marquee direction="right">
          <h1 class="title"><%= blog.title%></h1></marquee
        >
        <img src="<%= blog.coverImageURL %>" />
        <pre class="mt-4"><%= blog.body %></pre>
      </div>
      <div class="mt-4">
        <img src="<%= user.profileImageURL %>" width="50px" />
        <%= user.name %>
      </div>

      <div class="container mt-3">
        <h1>Comments (<%=comments.length%>)</h1>
        <% if(locals.user) { %>
        <form method="post" action="/blog/comment/<%= blog._id %>">
          <div class="mb-3">
            <input
              type="text"
              name="content"
              id="content"
              class="form-control"
              placeholder="Enter your comments"
            />
            <button class="btn btn-sn btn-primary mt-2" type="submit">
              Add
            </button>
          </div>
        </form>

        <% } %>
      </div>
      <div class="container mt-3">
        <% comments.forEach(comment => { %>
        <div>
          <img src="<%= comment.createdBy.profileImageURL%>" width="50px" />
          <%= comment.createdBy.fullName %>
          <pre><%= comment.content %></pre>
        </div>
        <% }) %>
      </div>
    </div>
    <%-include('./partials/scripts') %>
  </body>
</html>
